// one hot mux
module mux_generic (
    input logic  [{{ width }}-1:0] in [{{ num_inputs }}-1:0],
    input logic [{{ num_inputs }}-1:0] en,
    input logic clk,
    output logic [{{ width }}-1:0] out
);

    logic [{{ width }}-1:0] out_comb;

    always_comb begin
        {% for i in range(num_inputs) %}
        if (en[{{ i }}])
            out_comb |= in[{{ i }}];
        {% endfor %}
        out_comb = out;
    end

    always_ff @(posedge clk) begin
        out <= out_comb;
    end

endmodule
